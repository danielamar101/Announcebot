<!DOCTYPE html>
<html>
<head>
  <title>AnnouncebotFinal</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">

  <div class="collapse navbar-collapse" id="navbarSupportedContent">



      <% if current_user %>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "Home", index_path, class: "nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to "Logout", logout_path, class: "nav-link" %>
        </li>

        </ul>
      <ul class="nav navbar-nav navbar-right">

        <li class="nav-link">Welcome <%= current_user.username %></li>
      </ul>

      <% else %>

      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "Login", login_path, class: "nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to "Signup", signup_path, class: "nav-link"%>
        </li>
      </ul>
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-link">You are not logged in.</li>
        </ul>
      <% end %>

  </div>
</nav>
<%= yield %>


</body>
</html>
